apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Release.Name }}-deployment
spec:
  selector:
    matchLabels:
      app: music
  replicas: {{ .Values.Deployment.replicas_number}}
  template:
    metadata:
      labels:
        app: music
    spec:
      containers:
      - name: spring-music
        image: {{ .Values.Deployment.repo }}/{{ .Values.Deployment.image }}:{{ .Values.Deployment.tag }}
        ports:
        - containerPort: 808
