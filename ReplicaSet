kind: ReplicaSet
metadata:
  name: frontend
  labels:
    app: ui
    tier: frontend
spec:
  replicas: 3
  selector: 
    matchLabels:
      tier: frontend
  template:  
    metadata:
      labels:
        tier: frontend
  spec:
   containers:
   - name: bear
   image: supergiantkir/animals:bear
   ports:
   - containerPort: 80
   volumeMounts:
    - name: app-storage
      mountPath: /storage
   - name: moose
   image: yanivomc/spring-music:latest
   ports:
   - containerPort: 8080
   volumeMounts:
   - name: app-storage
      mountPath: /storage
 volumes:
 - name: app-storage
   hostPath:
      path: /data
